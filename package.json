{
  "name": "nestjs-example",
  "version": "0.0.0",
  "description": "Acerta Analytics Nest.js based Repo should use this as template",
  "directories": {
    "baseDir": "."
  },
  "main": "dist/main.js",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "eval $(grep -vE '^[ \t]*#' .env | xargs -0) nest start",
    "start:prod": "node dist/src/main",
    "lint": "eslint {src,test}/**/*.ts --fix",
    "lint:ci": "eslint {src,test}/**/*.ts",
    "test": "eval $(xargs < test/test.env) jest --runInBand",
    "test:unit": "eval $(xargs < test/test.env) jest --testRegex \\\".*\\\\.spec\\\\.ts\\\" --runInBand",
    "test:service": "eval $(xargs < test/test.env) jest --testRegex \\\".*\\.svc-spec\\.ts\\\" --runInBand",
    "test:ci": "rimraf test-reports && eval $(xargs < test/test.env) POSTGRES_HOST=postgres JEST_JUNIT_OUTPUT_DIR=test-reports jest --ci --reporters=default --reporters=jest-junit --coverageDirectory=test-reports/coverage --runInBand",
    "prepare": "husky install",
    "typeorm": "eval $(grep -vE '^[ \t]*#' .env | xargs -0) typeorm-ts-node-commonjs -d ormconfig.ts"
  },
  "dependencies": {
    "@acertaanalyticssolutions/acerta-standardnpm": "github:acertaanalyticssolutions/acerta-standardnpm",
    "@nestjs/axios": "^1.0.1",
    "@nestjs/common": "^9.4.2",
    "@nestjs/config": "^2.3.2",
    "@nestjs/core": "^9.4.2",
    "@nestjs/platform-express": "^9.4.2",
    "@nestjs/swagger": "^6.3.0",
    "@nestjs/terminus": "^9.2.2",
    "@nestjs/typeorm": "^9.0.1",
    "@willsoto/nestjs-prometheus": "^4.7.0",
    "change-case": "^4.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "jest-junit": "^16.0.0",
    "joi": "^17.8.3",
    "launchdarkly-node-server-sdk": "^7.0.1",
    "nestjs-pino": "^3.2.0",
    "pg": "^8.7.1",
    "pino-http": "^7.1.0",
    "pino-pretty": "^8.1.0",
    "redis": "^4.6.7",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "swagger-ui-express": "^4.3.0",
    "typeorm": "^0.3.12",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.5.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.4.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "eslint": "^8.43.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-only-warn": "^1.0.3",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "sqlite3": "^5.1.6",
    "supertest": "^6.1.3",
    "ts-jest": "^29.0.0",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,html,css,scss,less,json,yaml,md}": "prettier --write",
    "*.{ts,tsx,js,jsx}": "eslint --max-warnings 0"
  }
}
