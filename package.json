{
  "name": "nestjs-example",
  "version": "1.0.4",
  "description": "Acerta Analytics Nest.js based Repo should use this as template",
  "author": "",
  "directories": {
    "baseDir": "."
  },
  "main": "dist/main.js",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "eval $(xargs < .env) nest start --watch",
    "start:debug": "nest start --watch  --debug 0.0.0.0:9229",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:all": "jest --testRegex \".*\\..*spec\\.ts\" --runInBand",
    "test:svc": "./local_db_setup.sh -e test.env && eval $(xargs < test.env) jest --config ./test/jest-svc.json --verbose",
    "test:svc:watch": "jest --config ./test/jest-svc.json --verbose --watch",
    "test:svc:cov": "jest --config ./test/jest-svc.json --verbose --coverage",
    "prepare": "husky install",
    "typeorm": "eval $(xargs < .env) typeorm-ts-node-commonjs -d ormconfig.ts"
  },
  "dependencies": {
    "@acertaanalyticssolutions/acerta-standardnpm": "github:acertaanalyticssolutions/acerta-standardnpm",
    "@nestjs/axios": "^1.0.1",
    "@nestjs/common": "^9.4.2",
    "@nestjs/config": "^2.3.2",
    "@nestjs/core": "^9.4.2",
    "@nestjs/platform-express": "^9.4.2",
    "@nestjs/swagger": "^6.3.0",
    "@nestjs/terminus": "^9.2.2",
    "@nestjs/typeorm": "^9.0.1",
    "@willsoto/nestjs-prometheus": "^4.7.0",
    "change-case": "^4.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "joi": "^17.8.3",
    "launchdarkly-node-server-sdk": "^7.0.1",
    "nestjs-pino": "^3.2.0",
    "pg": "^8.7.1",
    "pino-http": "^7.1.0",
    "pino-pretty": "^8.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "swagger-ui-express": "^4.3.0",
    "typeorm": "^0.3.12"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.5.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.4.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-only-warn": "^1.0.3",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "sqlite3": "^5.1.6",
    "supertest": "^6.1.3",
    "ts-jest": "^29.0.0",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "rootDir": ".",
    "verbose": true,
    "moduleDirectories": [
      "./node_modules",
      "./src"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!axios)/"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t)s$": "ts-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.(t|j)s"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/migrations"
    ],
    "coverageDirectory": "<rootDir>/test/coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,html,css,scss,less,json,yaml,md}": "prettier --write",
    "*.{ts,tsx,js,jsx}": "eslint --max-warnings 0"
  }
}
