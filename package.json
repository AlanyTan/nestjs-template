{
  "name": "nestjs-example",
  "version": "0.0.0",
  "description": "Acerta Analytics Nest.js based Repo should use this as template",
  "directories": {
    "baseDir": "."
  },
  "main": "dist/main.js",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"**/*.{js,json,md,ts,yaml,yml}\"",
    "lint": "eslint \"src/**/*.ts\" \"test/**/*.ts\" \"*.ts\" --fix",
    "lint:ci": "eslint \"src/**/*.ts\" \"test/**/*.ts\" \"*.ts\"",
    "prepare": "husky install",
    "test": "eval $(awk '!/^#/{print \"export \" $0}' test/test.env) && jest --runInBand",
    "test:unit": "eval $(awk '!/^#/{print \"export \" $0}' test/test.env) && jest --testRegex \".*\\.spec\\.ts\" --runInBand",
    "test:service": "eval $(awk '!/^#/{print \"export \" $0}' test/test.env) && npm run typeorm -- schema:drop && jest --testRegex \".*\\.svc-spec.ts\" --runInBand",
    "test:ci": "rimraf test-reports && eval $(awk '!/^#/{print \"export \" $0}' test/test.env) && POSTGRES_HOST=postgres JEST_JUNIT_OUTPUT_DIR=test-reports jest --ci --reporters=default --reporters=jest-junit --coverageDirectory=test-reports/coverage --runInBand",
    "start": "eval $(awk '!/^#/{print \"export \" $0}' .env) && nest start",
    "start:prod": "node dist/src/main",
    "typeorm": "eval $(awk '!/^#/{print \"export \" $0}' .env) && typeorm-ts-node-commonjs -d ormconfig.ts"
  },
  "dependencies": {
    "@acertaanalyticssolutions/acerta-standardnpm": "github:acertaanalyticssolutions/acerta-standardnpm",
    "@nestjs/axios": "^1.0.1",
    "@nestjs/common": "^9.4.2",
    "@nestjs/config": "^2.3.2",
    "@nestjs/core": "^9.4.2",
    "@nestjs/platform-express": "^9.4.2",
    "@nestjs/swagger": "^6.3.0",
    "@nestjs/terminus": "^9.2.2",
    "@nestjs/typeorm": "^9.0.1",
    "@willsoto/nestjs-prometheus": "^4.7.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "joi": "^17.8.3",
    "launchdarkly-node-server-sdk": "^7.0.1",
    "nestjs-pino": "^3.2.0",
    "pg": "^8.7.1",
    "pino-http": "^7.1.0",
    "pino-pretty": "^8.1.0",
    "redis": "^4.6.7",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "swagger-ui-express": "^4.3.0",
    "typeorm": "^0.3.12",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.5.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.4.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.5.3",
    "@types/node": "^18.0.0",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^14.0.0",
    "prettier": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^29.0.0",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "*.{js,json,md,ts,yaml,yml}": "prettier --write",
    "*.{ts,js}": "eslint --max-warnings 0"
  }
}
