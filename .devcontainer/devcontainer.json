// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/typescript-node
{
  "name": "NestJS Example",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:1-18-bookworm",
  // See: https://containers.dev/features
  "features": {
    // We use docker-outside-of-docker (aka docker-from-docker) instead of docker-in-docker for our dev container service
    // to get network access to its Docker compose dependencies.
    // https://code.visualstudio.com/remote/advancedcontainers/use-docker-kubernetes
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "github-cli": {}
  },
  "portsAttributes": {
    "9080": {
      "label": "NestJS Example",
      "onAutoForward": "notify"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "[json]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[typescript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        }
      },
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "github.vscode-pull-request-github",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",
        "ms-azuretools.vscode-docker"
      ]
    },
    "codespaces": {
      "repositories": {
        "acertaanalyticssolutions/acerta-standardnpm": {
          "permissions": {
            "contents": "read"
          }
        }
      }
    }
  },
  "postCreateCommand": "npm install"
}
